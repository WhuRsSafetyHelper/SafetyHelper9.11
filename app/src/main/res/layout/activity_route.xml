<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/tv_nmsl"
            app:srcCompat="@drawable/icon_marka" />

        <TextView
            android:id="@+id/tv_nmsl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="18dp"
            android:text="我的位置"
            android:textSize="30sp" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_nmsl"
            android:layout_marginBottom="12dp"
            android:hint="输入目的地"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_dest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/autoCompleteTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/icon_markb" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/autoCompleteTextView"
            android:layout_toEndOf="@+id/autoCompleteTextView"
            android:text="确认"
            android:textSize="30sp" />
    </RelativeLayout>

    <!--<Button
        android:id="@+id/btn_ok"
        android:layout_width="30dp"
        android:layout_height="11dp"
        android:text="确认"
        android:textSize="30sp" />-->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="历史记录"
        android:gravity="center"/>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>


</LinearLayout>