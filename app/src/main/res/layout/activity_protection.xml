<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Protection">

    <TextView
        android:id="@+id/txv_goout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="请选择出行模式："
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginBottom="386dp"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="29dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_goout"
        app:layout_constraintVertical_bias="0.697">

        <RadioButton
            android:id="@+id/bywalk"
            android:layout_width="19dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:onClick="walk"
            android:text="步行"
            android:textColorLink="@color/colorPrimary"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/bycar"
            android:layout_width="19dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:onClick="bycar"
            android:text="打车"
            android:textColorLink="@color/colorPrimary"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:onClick="back_menu"
        android:text="返回"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</android.support.constraint.ConstraintLayout>